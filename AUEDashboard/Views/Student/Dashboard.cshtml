@{
    ViewData["Title"] = "Student Dashboard"; // Sets the title for the browser tab/window
}

<div class="container">
    <h1 class="my-4">Student Dashboard</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Assignments</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                           @*  <a href="@Url.Action("CreateAssignment", "Faculty")" class="text-decoration-none">
                                <i class="bi bi-plus-circle me-2"></i> New Assignment
                            </a>
                            <small class="text-muted ms-3">Create a new assignment.</small> *@
                        </li>
                        <li class="list-group-item">
                            @*  <a href="@Url.Action("Index", "Assignment")" class="text-decoration-none">
                                <i class="bi bi-list-ul me-2"></i> List All Assignments
                            </a>
                            <small class="text-muted ms-3">View and manage existing assignments.</small> *@
                            <div class="card-body">
                                @if (ViewBag.Assessments != null)
                                {
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>DueDate</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var assigments in ViewBag.Assessments)
                                            {
                                                <tr>
                                                    <td>@assigments.Title</td>
                                                    <td>@assigments.Description</td>
                                                    <td>@assigments.DueDate</td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-muted">No Assigments created yet.</p>
                                }
                            </div>


                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <hr />

    <div class="text-center text-muted">
        <p>&copy; @DateTime.Now.Year My University Portal. All rights reserved.</p>
    </div>
</div>

@section Scripts {
    }