@{
    ViewData["Title"] = "Faculty Dashboard"; // Sets the title for the browser tab/window
}

<div class="container">
    <h1 class="my-4">Faculty Dashboard</h1>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Assignments</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="@Url.Action("CreateAssignment", "Faculty")" class="text-decoration-none">
                                <i class="bi bi-plus-circle me-2"></i> New Assignment
                            </a>
                            <small class="text-muted ms-3">Create a new assignment.</small>
                        </li>
                        <li class="list-group-item">
                           @*  <a href="@Url.Action("Index", "Assignment")" class="text-decoration-none">
                                <i class="bi bi-list-ul me-2"></i> List All Assignments
                            </a>
                            <small class="text-muted ms-3">View and manage existing assignments.</small> *@
                            <div class="card-body">
                                @if (ViewBag.Assignments != null)
                                {
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>DueDate</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var assigments in ViewBag.Assignments)
                                            {
                                                <tr>
                                                    <td>@assigments.Title</td>
                                                    <td>@assigments.Description</td>
                                                    <td>@assigments.DueDate</td>
                                                 
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-muted">No Assigments created yet.</p>
                                }
                            </div>


                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="h5 mb-0">Students</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="@Url.Action("Register", "Student")" class="text-decoration-none">
                                <i class="bi bi-person-plus me-2"></i> Register New Student
                            </a>
                            <small class="text-muted ms-3">Enroll a new student.</small>
                        </li>
                        <li class="list-group-item">
                           @*  <a href="@Url.Action("Index", "Student")" class="text-decoration-none">
                                <i class="bi bi-people me-2"></i> List All Students
                            </a>
                            <small class="text-muted ms-3">View and manage registered students.</small> *@
                            <div class="card-body">
                                @if (ViewBag.Students != null)
                                {
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Username</th>
                                                <th>Firstname</th>
                                                <th>Assigment</th>
                                                <th>Remark</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in ViewBag.Students)
                                            {
                                                <tr>
                                                    <td>@student.Username</td>
                                                    <td>@student.FirstName</td>
                                                    <td></td>
                                                    <td></td>
                                                    <td>
                                                        @* Link to view individual student performance - assuming a StudentPerformance action *@
                                                        <a asp-controller="Faculty" asp-action="StudentPerformance" asp-route-studentId="@student.Id" class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-chart-line"></i> View Performance
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p class="text-muted">No students registered yet.</p>
                                }
                            </div>

                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="text-center text-muted">
        <p>&copy; @DateTime.Now.Year My University Portal. All rights reserved.</p>
    </div>
</div>

@section Scripts {
    }